<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="32dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:background="@drawable/ic_baseline_account_circle"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="150dp">
    </ImageView>
    <TextView
        android:id="@+id/completejobusername"
        android:text="Akash Ali"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="36sp"
        android:textColor="@color/BlueColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_marginTop="16dp"
        android:id="@+id/jobprice"
        android:text="Rs. 500"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="36sp"
        android:textColor="@color/BlueColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:layout_marginTop="16dp"
        android:text="Rate Customer"
        android:textStyle="normal"
        android:gravity="center"
        android:textSize="28sp"
        android:textColor="@color/BlueColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/onestar"
            android:background="@drawable/ic_baseline_star_grey"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </ImageView>
        <ImageView
            android:id="@+id/twostar"
            android:background="@drawable/ic_baseline_star_grey"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </ImageView>
        <ImageView
            android:id="@+id/threestar"
            android:background="@drawable/ic_baseline_star_grey"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </ImageView>
        <ImageView
            android:id="@+id/fourstar"
            android:background="@drawable/ic_baseline_star_grey"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </ImageView>
        <ImageView
            android:id="@+id/fivestar"
            android:background="@drawable/ic_baseline_star_grey"
            android:layout_width="50dp"
            android:layout_height="50dp">
        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/booking_back"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="62dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:text="Back"
            android:textColor="@color/white">
        </com.google.android.material.button.MaterialButton>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/booking_complete"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="62dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Submit"
            android:textColor="@color/white">
        </com.google.android.material.button.MaterialButton>

    </LinearLayout>


</LinearLayout>