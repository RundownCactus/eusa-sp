<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <fragment
        android:id="@+id/map"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CurrentJobMap" />

    <LinearLayout
        android:padding="8dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_sheet_background"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:text="Current Job"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/BlueColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="110dp">
            <ImageView
                app:srcCompat="@drawable/ic_baseline_account_circle"
                android:layout_width="80dp"
                android:visibility="gone"
                android:layout_height="80dp">

            </ImageView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/myimage"
                android:layout_gravity="center"
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:src="@drawable/profile1" />
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp">
                <TextView
                    android:id="@+id/currentjobuserfullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hammad Ali"
                    android:textColor="@color/BlueColor"
                    android:textSize="22sp"
                    app:layout_constraintTop_toBottomOf="@+id/myimage">
                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Unverified"
                        android:textStyle="normal"
                        android:layout_gravity="center"
                        android:textSize="18sp"
                        android:textColor="@color/gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <ImageView
                        app:srcCompat="@drawable/ic_baseline_unverified_user"
                        android:layout_marginLeft="4dp"
                        android:layout_gravity="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp">

                    </ImageView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/myrating"
                        android:textColor="@color/BlueColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4.8"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_star"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ratingtext"
                        android:layout_gravity="center"
                        android:textColor="@color/BlueColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:textSize="17sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:backgroundTint="@color/gray">

        </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="50dp"
                android:background="@drawable/ic_round_circle"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/currentjobusercall"
                    android:background="@drawable/ic_round_call"
                    android:layout_centerInParent="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp">
                </ImageView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:background="@drawable/ic_round_circle"
                android:layout_height="50dp">
                <ImageView
                    android:background="@drawable/ic_round_chat"
                    android:layout_centerInParent="true"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
                </ImageView>

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/booking_cancel1"
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:text="Cancel"
                android:textColor="@color/white">
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/booking_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:text="Complete"
                android:textColor="@color/white">
            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
