<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GetInfoStepFour">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/updesign5"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="16dp">
        <ImageView
            android:src="@drawable/circle_gray"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp">
        </ImageView>
        <ImageView
            android:src="@drawable/circle_gray"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp">
        </ImageView>
        <ImageView
            android:src="@drawable/circle_gray"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp">
        </ImageView>
        <TextView
            android:text="4"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:background="@drawable/circle_blue"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:ignore="HardcodedText"
            android:layout_marginStart="8dp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/updesign5"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/updesign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/downdesign5"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:background="@drawable/downdesign"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        android:orientation="vertical">

    </LinearLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/worktypestep4"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Work Type"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        app:boxStrokeColor="#03A9F4"
        app:counterEnabled="true"
        app:hintTextColor="#03A9F4"
        android:textColorHint="#BAB9B9"
        android:background="@color/white"
        app:boxBackgroundColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/updesign5"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,MissingConstraints">

        <AutoCompleteTextView
            android:id="@+id/applyworkdropdown"
            android:dropDownSelector="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="#000"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/hourlyratestep4"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hourly Rate"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:textColorHint="#BAB9B9"
        app:boxStrokeColor="#03A9F4"
        app:counterEnabled="true"
        app:counterMaxLength="4"
        app:hintTextColor="#03A9F4"
        app:prefixText="Rs. "
        app:prefixTextColor="#000"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/worktypestep4"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,RtlSymmetry">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/gethourlyrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:inputType="number"
            android:background="@color/white"
            android:textColor="#000" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/experiencestep4"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Experience"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingStart="16dp"
        android:textColorHint="#BAB9B9"
        app:boxStrokeColor="#03A9F4"
        app:counterEnabled="true"
        app:counterMaxLength="3"
        app:hintTextColor="#03A9F4"
        app:suffixText="Years"
        app:suffixTextColor="#000"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hourlyratestep4"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText,MissingConstraints,RtlSymmetry">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/getexperience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="true"
            android:inputType="numberDecimal"
            android:background="@color/white"
            android:textColor="#000" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/prevbuttonstep4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prev"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/experiencestep4"
        tools:ignore="HardcodedText,MissingConstraints"
        android:layout_marginStart="16dp">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/donebuttonstep4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/experiencestep4"
        tools:ignore="HardcodedText,MissingConstraints"
        android:layout_marginEnd="16dp">

    </com.google.android.material.button.MaterialButton>

</androidx.constraintlayout.widget.ConstraintLayout>